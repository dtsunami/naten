# da_code Configuration

# Azure OpenAI Configuration (Required)
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_DEPLOYMENT=gpt-4
AZURE_OPENAI_API_VERSION=2023-12-01-preview

# Agent Behavior Settings (Optional)
DA_CODE_TEMPERATURE=0.7
DA_CODE_MAX_TOKENS=
DA_CODE_AGENT_TIMEOUT=600
DA_CODE_MAX_RETRIES=2
DA_CODE_COMMAND_TIMEOUT=300
DA_CODE_REQUIRE_CONFIRMATION=true

# Workspace Configuration (Optional)
# Set the root directory for file operations - defaults to current working directory
DA_CODE_WORKSPACE_ROOT=

# CLI Configuration (Optional)
DA_CODE_HISTORY_FILE=
SHELL_HISTORY_FILE=

# Chat Memory PostgreSQL
CHAT_DB_HOST=pgchat
CHAT_DB_PORT=5432
CHAT_DB_DATABASE=orenco_chatmemory
CHAT_DB_USER=lostboy
CHAT_DB_PASSWORD=your_postgres_password_here
CHAT_DB_EXTERNAL_PORT=5434
POSTGRES_CHAT_URL=postgresql://${CHAT_DB_USER}:${CHAT_DB_PASSWORD}@localhost:${CHAT_DB_EXTERNAL_PORT}/${CHAT_DB_DATABASE}

# Chat Memory File Storage (Optional fallback directory)
DA_CODE_CHAT_MEMORY_DIR=./da_code_chat_memory

# MongoDB Configuration (Optional)
MONGO_HOST=mongo
MONGO_PORT=27017
MONGO_USER=lostboy
MONGO_PASSWORD=your_mongo_password_here
MONGO_DATABASE=orenco_pydantic
MONGO_URI=mongodb://${MONGO_USER}:${MONGO_PASSWORD}@${MONGO_HOST}:${MONGO_PORT}/${MONGO_DATABASE}?authSource=admin

# Logging
LOG_LEVEL=INFO